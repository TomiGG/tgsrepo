<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<form id="login-form" method="POST" action="/users/register">
  {{#if errors}}
        {{#each errors}}
          <div class="alert alert-danger">{{msg}}</div>
        {{/each}}
  {{/if}}
  <h3 class="form-headings">Bitte Registrieren!</h2>
  <div class="input-group spacing">
    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
    <input id="email" type="text" class="form-control" name="username" placeholder="Username">
  </div>
  <div class="input-group spacing">
    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
    <input id="password" type="password" class="form-control" name="password" placeholder="Password">
  </div>
  <div class="input-group spacing">
    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
    <input id="password" type="password" class="form-control" name="password2" placeholder="Confirm Password">
  </div>
  <div style="margin-bottom: 7px;">Du hast schon einen Account? <a href="/users/login">Hier einloggen!</a></div>
  <button type="submit" class="btn btn-default spacing" style="width:100%;">Submit</button>
</form>
